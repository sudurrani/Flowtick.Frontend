
    <style>
        :root {
            --primary-color: #0d9488;
            --primary-btn-bg: #0d9488;
            --primary-btn-fore: #fff;
            --primary-hover: #0f766e;
            --border-color: #e5e7eb;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            height: 100vh;
            overflow: hidden;
            display: flex;
        }

        /* Left Side - Form */
        .form-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            background: #ffffff;
            overflow-y: auto;
        }

        .form-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px;
            max-width: 600px;
            margin: 0 auto;
            width: 100%;
        }

        .logo-section {
            margin-bottom: 48px;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .logo-icon {
            width: 36px;
            height: 36px;
            background: var(--primary-color);
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            transform: rotate(45deg);
        }

        .logo-icon::before {
            content: '';
            width: 18px;
            height: 18px;
            background: white;
            border-radius: 2px;
            transform: rotate(-45deg);
        }

        .logo-text {
            font-size: 24px;
            font-weight: 600;
            color: #1f2937;
        }

        .progress-steps {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 40px;
        }

        .step {
            flex: 1;
            height: 4px;
            background: #e5e7eb;
            border-radius: 2px;
            position: relative;
            overflow: hidden;
        }

        .step.active {
            background: var(--primary-color);
        }

        .step.completed {
            background: var(--primary-color);
        }

        .step-label {
            font-size: 12px;
            color: #6b7280;
            margin-top: 8px;
        }

        .page-title {
            font-size: 32px;
            font-weight: 700;
            color: #111827;
            margin-bottom: 12px;
        }

        .page-subtitle {
            font-size: 16px;
            color: #6b7280;
            margin-bottom: 40px;
            line-height: 1.6;
        }

        .form-group {
            margin-bottom: 32px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #374151;
            font-size: 14px;
            font-weight: 600;
        }

        .label-optional {
            color: #9ca3af;
            font-weight: 400;
            font-size: 13px;
        }

        input[type="text"],
        textarea,
        select {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid var(--border-color);
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.2s;
            outline: none;
            font-family: inherit;
        }

        input[type="text"]:focus,
        textarea:focus,
        select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.1);
        }

        textarea {
            min-height: 100px;
            resize: vertical;
        }

        .hint-text {
            font-size: 13px;
            color: #6b7280;
            margin-top: 6px;
        }

        .template-options {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: 12px;
            margin-bottom: 32px;
        }

        .template-card {
            border: 2px solid var(--border-color);
            border-radius: 8px;
            padding: 16px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s;
            background: white;
        }

        .template-card:hover {
            border-color: var(--primary-color);
            background: #f0fdf4;
        }

        .template-card.selected {
            border-color: var(--primary-color);
            background: #ecfdf5;
        }

        .template-icon {
            width: 40px;
            height: 40px;
            margin: 0 auto 8px;
            color: var(--primary-color);
        }

        .template-name {
            font-size: 14px;
            font-weight: 600;
            color: #374151;
        }

        .action-buttons {
            display: flex;
            gap: 12px;
            margin-top: 40px;
        }

        .btn {
            flex: 1;
            padding: 14px 24px;
            border-radius: 8px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
        }

        .btn-primary {
            background: var(--primary-btn-bg);
            color: var(--primary-btn-fore);
        }

        .btn-primary:hover {
            background: var(--primary-hover);
        }

        .btn-secondary {
            background: white;
            color: #374151;
            border: 2px solid var(--border-color);
        }

        .btn-secondary:hover {
            background: #f9fafb;
        }

        .skip-link {
            text-align: center;
            margin-top: 16px;
        }

        .skip-link a {
            color: #6b7280;
            text-decoration: none;
            font-size: 14px;
        }

        .skip-link a:hover {
            color: var(--primary-color);
        }

        /* Right Side - Info */
        .info-section {
            flex: 1;
            background: linear-gradient(135deg, #0d9488 0%, #0f766e 100%);
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px;
            position: relative;
            overflow: hidden;
        }

        .info-section::before {
            content: '';
            position: absolute;
            width: 600px;
            height: 600px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
            top: -200px;
            right: -200px;
        }

        .info-section::after {
            content: '';
            position: absolute;
            width: 400px;
            height: 400px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
            bottom: -150px;
            left: -150px;
        }

        .info-content {
            position: relative;
            z-index: 1;
            max-width: 500px;
        }

        .info-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            background: rgba(255, 255, 255, 0.2);
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
            margin-bottom: 24px;
        }

        .badge-icon {
            width: 16px;
            height: 16px;
        }

        .info-title {
            font-size: 40px;
            font-weight: 700;
            margin-bottom: 20px;
            line-height: 1.2;
        }

        .info-description {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 48px;
            opacity: 0.95;
        }

        .info-features {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        .feature-item {
            display: flex;
            align-items: start;
            gap: 16px;
        }

        .feature-icon {
            width: 48px;
            height: 48px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .feature-icon svg {
            width: 24px;
            height: 24px;
        }

        .feature-content {
            flex: 1;
            padding-top: 4px;
        }

        .feature-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .feature-desc {
            font-size: 14px;
            opacity: 0.9;
            line-height: 1.5;
        }

        .testimonial {
            margin-top: 48px;
            padding: 24px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            border-left: 4px solid rgba(255, 255, 255, 0.3);
        }

        .testimonial-text {
            font-size: 15px;
            font-style: italic;
            margin-bottom: 12px;
            line-height: 1.6;
        }

        .testimonial-author {
            font-size: 14px;
            font-weight: 600;
        }

        .testimonial-role {
            font-size: 13px;
            opacity: 0.8;
        }

        /* Responsive */
        @@media (max-width: 968px) {
            body {
                flex-direction: column;
            }

            .info-section {
                display: none;
            }

            .form-container {
                padding: 40px 24px;
            }
        }

        @@media (max-width: 480px) {
            .page-title {
                font-size: 26px;
            }

            .action-buttons {
                flex-direction: column;
            }

            .template-options {
                grid-template-columns: 1fr 1fr;
            }
        }
    </style>

