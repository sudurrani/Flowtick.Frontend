@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_FlowtickLayout.cshtml";
}
<style>
    /* === Main Content === */
    .main-content {
        margin-top: 20px;
    }

        .main-content.expanded {
            margin-left: 0;
        }

    .welcome-banner {
        color: #000000;
        border-radius: 12px;
        padding: 20px 30px 70px;
        margin-bottom: 25px;
        position: relative;
        overflow: hidden;
        background: linear-gradient(90deg, #D1EEF0 10%, #87BEBD 39.9%, #87BEBD 67.29%, #D1EEF0 92%);
        border: 1px solid #C7EEF5;
    }



    .banner-date {
        font-size: 14px;
        color: #000000;
    }

    .banner-heading {
        color: #000000;
        font-size: 24px;
        font-weight: 700;
    }
    /*//cards*/

    .app-card {
        background-color: #FFFFFF;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        padding: 11px 15px;
        transition: all 0.2s ease-in-out;
        cursor: pointer;
    }

        .app-card:hover {
            border-color: #046f76;
            box-shadow: 0 0 10px rgba(4, 111, 118, 0.1);
            background-color: #F0F1F2;
        }

    /*    .app-card.active {
                border-color: #046f76;
                box-shadow: 0 0 10px rgba(4, 111, 118, 0.1);
                background-color: #f5f6f8;
            }*/

    .app-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }



    /* === team Tab Banner === */
    .team-tab-banner {
        color: #000000;
        border-radius: 12px;
        padding: 20px 30px;
        margin-bottom: 25px;
        position: relative;
        overflow: hidden;
        background: #F8F8F8;
        /*    border: 1px solid #C7EEF5;*/
    }

    .team-banner-heading {
        color: #000000;
        font-size: 17px;
        font-weight: 600;
    }


    .banner-data {
        font-size: 15px;
        color: #797A7F;
        letter-spacing: 0.2px;
        padding: 5px 0px;
        font-weight: 500;
    }

    .btn-create-new-team {
        background-color: transparent;
        color: #797A7F;
        border: none;
        font-weight: 600;
        padding: 4px 12px !important;
        border-radius: 4px;
    }

    .btn-browse-teams {
        background-color: #00777F;
        color: white;
        font-weight: 500;
        border: none;
        padding: 4px 12px !important;
        border-radius: 4px;
    }

    .btn-create-new-team:hover,
    .btn-create-new-team:focus {
        background-color: #e6e6e6;
    }

    .btn-browse-teams:hover,
    .btn-browse-teams:focus {
        background-color: #008b99;
        color: #FFFFFF;
    }

    /*work Items */
    .recent-work-container {
        background: #FFFFFF;
        border-radius: 10px;
        box-shadow: 0 0 0 1px #e5e7eb;
        overflow: hidden;
        /*   max-width: 900px;*/
        /*    margin: 20px auto;*/
        /*    font-family: "Inter", sans-serif;*/
    }

    .work-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 20px;
        border-bottom: 1px solid #f0f0f0;
        transition: background 0.2s;
    }

        .work-item:hover {
            background-color: #F0F1F2;
        }

    .work-left {
        display: flex;
        align-items: flex-start;
        gap: 14px;
    }

    .work-icon {
        color: #046f76;
        margin-top: 5px;
        font-size: 18px;
        padding: 5px 9px;
        border: 1px solid #e5e7eb;
        border-radius: 6px;
    }

    .work-info {
        display: flex;
        flex-direction: column;
        gap: 0px;
    }

    .work-title {
        font-weight: 600;
        font-size: 14px;
        color: #1f2937;
    }

    .work-meta {
        font-size: 13px;
        color: #6b7280;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .issue-code {
        font-weight: 500;
        color: #046f76;
    }

    .work-right {
        display: grid;
        grid-template-columns: 100px 120px; /* first for date, second for Profiles */
        align-items: center;
        gap: 35px;
        text-align: left;
    }

    .work-date {
        font-size: 13px;
        color: #046f76;
    }

    .avatars {
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }

    .avatar {
        width: 28px;
        height: 28px;
        border-radius: 50%;
        border: 1px solid #e5e7eb;
        margin-left: -6px; /* overlap effect */
    }

        .avatar:first-child {
            margin-left: 0;
        }

    .show-more {
        padding: 12px 18px;
        font-size: 14px;
        color: #046f76;
        font-weight: 500;
        cursor: pointer;
    }

        .show-more:hover {
            text-decoration: underline;
        }

</style>
<!-- === Main Content Area === -->
<div id="mainContent" class="main-content" style="margin-left:45px;">
    <!-- === Welcome Banner === -->
    <div class="container">
        <div class="welcome-banner rounded-3  d-flex justify-content-between align-items-center">
            <div>
                <p class="banner-date mb-1" id="bannerDate"></p>
                <h3 class="banner-heading mb-0 fw-semibold">
                    Hello, <spam id="userName"></spam>
                </h3>
            </div>
        </div>
    </div>
    @*//cards*@
    <div class="container my-4 mt-5 ">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h6 class="fw-bold mb-0">Your apps</h6>
            <a href="#" class="text-decoration-none text-dark fw-semibold">
                View all apps <i class="bi bi-arrow-right ms-1"></i>
            </a>
        </div>

        <div class="row g-3">
            <!-- Jira -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="app-card active">
                    <div class="d-flex align-items-center">
                        <div class="app-icon bg-light">
                            <img src="~/img/logo/logo.png" style="width:32px; height:32px;" />
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0 fw-semibold">Flowtick</h6>
                            <small class="text-muted">bha-erp</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Teams -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="app-card">
                    <div class="d-flex align-items-center">
                        <div class="app-icon bg-light">
                            <i class="bi bi-people fs-5"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0 fw-semibold">Teams</h6>
                            <small class="text-muted">bha-erp</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account settings -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="app-card">
                    <div class="d-flex align-items-center">
                        <div class="app-icon bg-light">
                            <i class="bi bi-gear fs-5"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0 fw-semibold">Account settings</h6>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Atlassian Support -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="app-card">
                    <div class="d-flex align-items-center">
                        <div class="app-icon bg-light">
                            <i class="bi bi-question-circle fs-5"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0 fw-semibold">Atlassian Support</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Where you work*@
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center tab-container">
            <h6 class="mb-0 fw-bold tab-container">Where you work</h6>
            <!-- Tab Navigation -->
            <ul class="nav nav-tabs tab-buttons" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="yourWorkTab" data-bs-toggle="tab" href="#yourWorkTabContent" role="tab">
                        Your work
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="teamTab" data-bs-toggle="tab" href="#teamTabContent" role="tab">
                        Teams
                    </a>
                </li>
            </ul>
        </div>

        <!-- Tab Content -->
        <div class="tab-content">
            <div class="tab-pane fade show active" id="yourWorkTabContent" role="tabpanel">
                <div class="row g-3" id="projectContainer"></div>

            </div>
            <div class="tab-pane fade" id="teamTabContent" role="tabpanel">
                <div class="team-tab-banner rounded-3  d-flex justify-content-between align-items-center">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="team-banner-heading mb-0 ">
                                Join a team to add team spaces
                            </h5>
                            <p class="banner-data">
                                Once you're on a team, you can add shortcuts to the places where your team works. Find a team in the directory, or create a new team to get started.
                            </p>
                            <!-- Buttons -->
                            <div class="mt-3 d-flex align-items-center gap-3">
                                <button type="button" class=" btn-create-new-team">Create a new team</button>
                                <button type="button" class="btn-browse-teams">Browse Teams</button>
                            </div>
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*What's next*@
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center tab-container">
            <h6 class="mb-0 fw-bold tab-container">What's next</h6>
            <!-- Tab Navigation -->
            <ul class="nav nav-tabs tab-buttons" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="workedOnTab" data-bs-toggle="tab" href="#workedOnTabContent" role="tab">
                        Worked On
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="viewedTab" data-bs-toggle="tab" href="#viewedTabContent" role="tab">
                        Viewed
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="recommendedTab" data-bs-toggle="tab" href="#recommendedTabContent" role="tab">
                        Recommended
                    </a>
                </li>
            </ul>
        </div>

        <!-- Tab Content -->
        <div class="tab-content">
            <div class="tab-pane fade show active" id="workedOnTabContent" role="tabpanel">
                <div class="recent-work-container" id="workOnContainer">
                </div>
            </div>
            <div class="tab-pane fade" id="viewedTabContent" role="tabpanel">
                <div class="recent-work-container" id="workViewedContainer">
                </div>
            </div>
            <div class="tab-pane fade" id="recommendedTabContent" role="tabpanel">
                <div class="recent-work-container" id="workRecommendedContainer">
                </div>
            </div>
        </div>
    </div>

</div>



<!-- === Scripts === -->
<script src="~/js/FunctionalityJS/common-script.js" asp-append-version="true"></script>
<script src="~/js/functionalityjs/Dashboard/index.js" asp-append-version="true"></script>
<script src="~/layout/js/bootstrap.bundle.min.js"></script>
<script src="~/layout/js/jquery-3.7.1.min.js"></script>

