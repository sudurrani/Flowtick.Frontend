@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/img/logo/logo.png" type="image/x-icon">
    <title>Flowtick -  User Log-In</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link href="~/css/auth/login/login.css" rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/toastr/toastr.css" rel="stylesheet" />

    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
</head>
<body>
    @{
        @await Html.PartialAsync("~/Views/Shared/PartialViews/Common/_AjaxRequestLoaderPartialView.cshtml")                
    }
	<div class="top-wave"></div>

	<div class="signup-section">
		<!-- Top Icon -->
		<div class="top-logo-text">
			<img src="~/img/logo/logo.png" />
			<span>Flowtick </span>
		</div>

		<!-- Signup Card -->
		<div class="signup-card">
			

			<h2> </h2>
			<h2>Log in to continue</h2>

			<!-- Form -->
			<form id="LoginForm">
				<div class="mb-3 text-start">
					<label class="form-label fw-semibold">Email</label>
					<input type="text" class="form-control" placeholder="Enter your email" id="email" required />
				</div>

				<div class="mb-3 text-start position-relative">
					<label class="form-label fw-semibold">Password</label>
					<input type="password" class="form-control password-input" placeholder="Enter your password" id="password" required />
					<i class="bi bi-eye toggle-password" id="togglePassword"></i>
				</div>
				<div class="border-line"></div>


				<button type="button" class="btn btn-continue" id="btnLogin">Log in</button>

				<div class="or-divider">Or Login with</div>

				<div class="social-buttons">
					<button class="social-btn"><img src="~/img/auth/signup/emailverificaton/google-logo.png" /> Google</button>
					<button class="social-btn"><img src="~/img/auth/signup/emailverificaton/microsoft-50.png" /> Microsoft</button>
					<button class="social-btn"><i class="bi bi-apple"></i> Apple</button>
					<button class="social-btn"><img src="~/img/auth/signup/emailverificaton/slack.png" /> Slack</button>
				</div>

				<p class="footer-text">Can't log in? <a href="@Url.Action("SignUp", "Auth")">Create an account</a></p>

			</form>
		</div>

		<!-- Bottom Logo -->
		<div class="bottomLogo">
			<i class="bi bi-symmetry-vertical"></i>
			<span>Fophex</span>
		</div>
	</div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/scripts/crypto-js.min.js"></script>
    <script src="~/lib/toastr/toastr.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>

	<script src="~/js/FunctionalityJS/common-script.js" asp-append-version="true"></script>
	<script src="~/js/functionalityjs/auth/login/login.js" asp-append-version="true"></script>

</body>
</html>
<script>
    localStorage.clear();
</script>